#include <iostream>
#include <string>
#include <vector>
#include <algorithm> 

using namespace std;

void selectionSort(vector<string>& nomes) {
    int n = nomes.size();
    for (int i = 0; i < n - 1; ++i) {
        int menor = i;
        for (int j = i + 1; j < n; ++j) {
            if (nomes[j].length() < nomes[menor].length()) {
                menor = j;
            }
        }
        if (menor != i) {
            swap(nomes[i], nomes[menor]);
        }
    }
}

int main() {
    int n;
    cout << "Digite o nÃºmero de nomes: ";
    cin >> n;

    vector<string> nomes;

    for (int i = 0; i < n; ++i) {
        string nome;
        cout << "Digite o nome #" << i + 1 << ": ";
        cin >> nome;
        nomes.push_back(nome);
    }

    selectionSort(nomes);

    cout << "\nNomes ordenados pelo tamanho:\n";
    for (const string& nome : nomes) {
        cout << nome << "\n";
    }

    return 0;
}
